
@{
    ViewBag.Title = "Create";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Create Category</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                New category
            </div>            
        </div>       
    </div>    
</div>

<form class="form-inline" style="margin-left: 25px; margin-top: 30px;">
    <div class="form-group row">
        <label for="name" class="col-2 col-form-label">Name</label>
        <div class="col-10">
            <input class="form-control" type="text" data-bind="textInput :name" id="name">
        </div>
    </div>
    <button data-bind="click:save" class="btn btn-primary">Save</button>
    <button data-bind="click:cancel" class="btn btn-danger">Cancel</button>
</form>

<script>

    var app = new CategoryNewViewModel(@ViewBag.cafeteriaId);
