
@{
    ViewBag.Title = "Edit";
}
<form class="form-inline" style="margin-left: 25px; margin-top: 30px;">
    <div class="form-group row">
        <label for="name" class="col-2 col-form-label">Name</label>
        <div class="col-10">
            <input class="form-control" type="text" data-bind="textInput :name" id="name">
        </div>
    </div>


    <div class="form-group row">
        <label for="price" class="col-2 col-form-label">Price</label>
        <div class="col-10">
            <input class="form-control" type="number" data-bind="textInput :price" id="price">
        </div>
    </div>


    <div class="form-group row">
        <label for="description" class="col-2 col-form-label">Description</label>
        <div class="col-10">
            <input class="form-control" type="text" data-bind="textInput :description" id="description">
        </div>
    </div>


    <div class="form-group row">
        <label for="type" class="col-2 col-form-label">Type</label>
        <div class="col-10">
            <input class="form-control" type="text" data-bind="textInput:type" id="type">
        </div>
    </div>
    <button data-bind="click:save" class="btn btn-primary">Save</button>
    <button data-bind="click:cancel"  class="btn btn-danger">Cancel</button>
</form>

<script>
    var app = new MenuItemEditViewModel(@ViewBag.Id);

    ko.applyBindings(app);
</script>
