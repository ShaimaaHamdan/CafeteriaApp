<table>
    <tbody>
        <tr>
            <th>
                OrderId
                <span>&nbsp;&nbsp;</span>
            </th>
            
            <th>
                OrderItem
                <span>&nbsp;&nbsp;</span>
            </th>
            <th>
                Quantity
                <span>&nbsp;&nbsp;</span>
            </th>
            <th>
                Order Status
            </th>
        </tr>
     </tbody>
    <tbody data-bind="foreach:orders">
        <tr data-bind="visible:OrderItems.length>0 && OrderStatus!='completed'" class="odd gradeX">
            <td data-bind="text:Id"></td>
            <td data-bind="foreach:OrderItems">
                <div data-bind="text:MenuItem.Name">
               </div>
              <td data-bind="foreach:OrderItems">
                  <div data-bind="text:Quantity"></div>
                </td>
            <td data-bind="text:OrderStatus">

            </td>

                  
            
            <td><button type="button" id="myButton" data-bind="click:$root.inprogress" class="btn btn-success">inprogress</button>
                <span>&nbsp;&nbsp;</span>
            </td>

            <td><button type="button" id="myButton" data-bind="click:$root.finish" class="btn btn-success">finish</button></td>
            <td><button type="button" id="myButton" data-bind="click:$root.waiting" style="margin-left:+10px" class="btn btn-success">waiting</button></td>
            <td><br /><hr /></td>
            
        </tr>

    </tbody>
</table>
<script> 
    var app = new orderViewModel();
    ko.applyBindings(app);
</script>