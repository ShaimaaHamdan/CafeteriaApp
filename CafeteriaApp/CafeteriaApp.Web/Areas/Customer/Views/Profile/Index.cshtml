                        <input class="form-control" type="text" data-bind="textInput:model().phoneNumber" name="phoneNumber" id="phoneNumber" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Email:</label>
                    <div class="col-lg-8">
