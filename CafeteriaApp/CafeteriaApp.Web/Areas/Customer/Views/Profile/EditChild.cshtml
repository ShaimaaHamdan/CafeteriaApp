
<div class="container">
    <h1>Edit Child Info</h1>
    <hr>
    <div class="row">
        <!-- left column -->
        <div class="col-md-3" data-bind="fileDrag: fileData">

            <div class="image-upload-preview">
                <img width="370" height="266" data-bind="attr: { src: fileData().dataURL }, visible: fileData().dataURL">
            </div>

            <div class="image-upload-input">
                <input type="file" data-bind="fileInput: fileData,customFileInput: {}">
            </div>

        </div>

        <!-- edit form column -->
        <div class="col-md-9 personal-info">
            <div class="alert alert-info alert-dismissable">
                <a class="panel-close close" data-dismiss="alert">×</a>
                <i class="fa fa-coffee"></i>
                This is an <strong>.alert</strong>. Use this to show important messages to the user.
            </div>
            <h3>Child info</h3>

            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <label class="col-lg-3 control-label">Name:</label>
                    <div class="col-lg-8">
                        <input class="form-control" type="text" data-bind="textInput:model().name" name="name" id="name" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Age</label>
                    <div class="col-lg-8">
                        <input class="form-control" type="text" data-bind="textInput:model().age" name="age" id="age" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">School Year:</label>
                    <div class="col-lg-8">
                        <div class="ui-select">
                            <select id="user_time_zone" class="form-control">
                                <option value="Hawaii">First</option>
                                <option value="Alaska">Second</option>
                                <option value="Pacific Time (US &amp; Canada)">Third</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Day Credit:</label>
                    <div class="col-lg-8">
                        <input class="form-control" type="text" data-bind="textInput:model().dayLimit" name="dayLimit" id="dayLimit" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Total Credit:</label>
                    <div class="col-lg-8">
                        <input class="form-control" type="text" data-bind="textInput:model().dependentCredit" name="dependentCredit" id="dependentCredit" required>
                    </div>
                </div>


                <div class="form-group">
                    <label class="col-md-3 control-label"></label>
                    <div class="col-md-8">
                        <input type="button" data-bind="click:save" class="btn btn-primary" value="Save Changes">
                        <span></span>
                        <input type="reset" class="btn btn-default" value="Cancel">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<hr>


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Restrictions</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Manage Your Childeren
                <div>
                    <a style="float: right;margin-top: -27px;" title="Add Child" id="creatNewRestriction" data-bind="attr:{href:'/customer/profile/addRestriction'}"
                       class="btn btn-warning btn-circle"><i class="fa fa-plus"></i></a>
                </div>

            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-Childeren">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Age</th>
                            <th>School Year</th>
                            <th>Day Credit</th>
                            <th>Total Credit</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody data-bind="foreach: restrictions">
                        <tr class="odd gradeX">
                            <td data-bind="text:Name"></td>
                            <td data-bind="text:Price"></td>
                            <td data-bind="text:Description"></td>
                            <td data-bind="text:Type"></td>
                            
                            <td class="center">
                                <button type="button" id="myButton" data-bind="attr:{restrictionId:Id}" class="btn btn-danger" data-toggle="modal" data-target="#mydeleteModal">Delete</button>
                            </td>
                        </tr>

                    </tbody>
                </table>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

<script>
    var app = new ChildEditViewModel(@ViewBag.Id);

    ko.applyBindings(app);
</script>