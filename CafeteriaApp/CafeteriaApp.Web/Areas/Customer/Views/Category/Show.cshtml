                <div class="form_title color1">
                    We are open 7 days a week - 8 AM to 12 PM <br>+1 101 889 9898
                </div>
                <form id="bookingForm">
                    <div class="tmInput">
                        @*<div class="form-group">
                            <label>Delivery Time</label>
                        <input placeHolder="Delivery Time:" type="text" data-bind="textInput:model().deliverytime" name="DeliveryTime" id="DeliveryTime" required>
                            @*<input type="text" class="form-control" autofocus="autofocus" data-bind="textInput:model().deliverytime" name="DeliveryTime" id="DeliveryTime" required>*@
                        </div>
                    <div class="tmInput">
                        <input placeHolder="Delivery Place:" type="text" data-bind="textInput:model().deliveryplace" name="DeliveryPlace" id="DeliveryPlace" required>
                        
                    </div>
                    <div class="clear f_sep1"></div>
                    <strong class="dt">Check-in</strong>
                    <label class="tmDatepicker">
                        <input type="text" name="Date" placeHolder='10/05/2014'>  @*data-constraints="@NotEmpty @Required @Date"*@
                    </label>
                    <div class="clear"></div>
                    <strong class="dt">Check-out</strong>
                    <label class="tmDatepicker">
                        <input type="text" name="Date" placeHolder='20/05/2014'>
                    </label>
                    <div class="clear"></div>
                    <div class="fl1 ">
                        <em>Adults</em>
                        <select name="Adults" class="tmSelect auto" data-class="tmSelect tmSelect2" data-constraints="">
