                <div class="clear"></div>
                <h2>Menu Items</h2>
                
           


                @*<div data-bind="foreach:getAllMenuItems">*@
                <div data-bind="foreach:menuItems">
                
                   
                    @*<a style="margin-bottom:50px" data-bind="attr:{href:'/Customer/Cafeteria/show/'+Id}" class="gall_item"><img src="/Scripts/CustomerTheme/images/page2_img1.jpg" alt=""></a>*@
                    <div class="gall_bot">
                        <div class="text1">
                            <a style="float:right;margin-top: 23px;margin-right:250px" title="Add Item To Cart" id="creatNewCafeteria" data-bind="attr:{href:'/admin/cafeteria/create'}"
                               class="btn btn-success btn-circle"><i class="fa fa-plus"></i></a>
                            <a href="#">
                                <span data-bind="text:Name"></span>
                                
                                @*<div> @Html.DisplayNameFor(m=>m.photo) alt="" </div>*@
                                @*<div><img src="@Url.Content(@Model.photo)" alt=""></div>*@
                                <img data-bind="attr:{src:Photo}">
